<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:local="clr-namespace:NavascaBasTaskerApp.MVVM.Views"
             xmlns:viewmodels="clr-namespace:NavascaBasTaskerApp.MVVM.ViewModels"
             x:Class="NavascaBasTaskerApp.MVVM.Views.MainView"
             Title="MainView"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#c9ccff">
    <Grid>

        <ScrollView>

            <VerticalStackLayout>

                <Border WidthRequest="400" HeightRequest="95" BackgroundColor="#5E66FF" Stroke="Transparent">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="0,0,15,15"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#343874"
                        Offset="0,2"
                        Radius="8"
                        Opacity="0.8"/>
                    </Border.Shadow>

                    <Grid RowDefinitions="*,*"
                          ColumnDefinitions="Auto, 3*, *">

                        <Image Grid.RowSpan="2"
                       Source="menu.png"
                       WidthRequest="25"
                       Margin="30,0,0,0"/>

                        <Label Text="Welcome,"
                       Grid.Column="1"
                       FontFamily="OutfitRegular"
                       TextColor="White"
                       FontSize="15"
                       Margin="0,30,0,0"
                       HorizontalTextAlignment="End"/>

                        <Label Text="Marven James Bas"
                       Grid.Column="1"
                       Grid.Row="1"
                       FontFamily="OutfitSemibold"
                       TextColor="White"
                       FontSize="18"
                       Margin="0,0,0,0"
                       HorizontalTextAlignment="End"/>

                        <Image Grid.Column="2"
                       Grid.RowSpan="2"
                       Source="user.png"
                       WidthRequest="60"/>

                    </Grid>
                </Border>

                <Border WidthRequest="400" MinimumHeightRequest="640" BackgroundColor="White" Margin="0,20,0,0" Stroke="White">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="15,15,0,0"/>
                    </Border.StrokeShape>
                    <Border.Shadow>
                        <Shadow Brush="#212A40"
                                Offset="0,-2"
                                Radius="8"
                                Opacity="0.45"/>
                    </Border.Shadow>

                    <Grid RowDefinitions="Auto, Auto, Auto, Auto">

                        <HorizontalStackLayout>
                            <Image Source="checklist.png"
                                   WidthRequest="40"
                                   Margin="30,30,0,0"
                                   HorizontalOptions="Start"/>

                            <Label Text="My Tasks"
                                   FontSize="28"
                                   FontFamily="OutfitBold"
                                   Margin="10,30,0,0"
                                   TextColor="#5E66FF"/>
                        </HorizontalStackLayout>


                        <Label Text="Categories"
                               Grid.Row="1"
                               Margin="30,15,0,0"
                               FontSize="18"
                               FontFamily="OutfitRegular"
                               TextColor="#7b81ff"
                       />
                        
                        <CollectionView Grid.Row="2"
                                        ItemsSource="{Binding Categories}"
                                        HeightRequest="180"
                                        Margin="20,0,0,0">
                            
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border WidthRequest="220" HeightRequest="150" StrokeThickness="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="25"/>
                                        </Border.StrokeShape>
                                        <Border.Shadow>
                                            <Shadow Brush="#212A40"
                                                    Offset="1,5"
                                                    Radius="3"
                                                    Opacity="0.6"/>
                                        </Border.Shadow>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=FilterTasksCommand}"
                                                                  CommandParameter="{Binding .}" />
                                        </Border.GestureRecognizers>

                                        <Grid Padding="20,15,20,0">
                                            <Grid.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="{Binding Color}" Offset="0.1" />
                                                    <GradientStop Color="#4b51cc" Offset="2.0" />
                                                </LinearGradientBrush>
                                            </Grid.Background>


                                            <VerticalStackLayout Spacing="5">

                                                <Label Text="{Binding CategoryName}" 
                                                       TextColor="White" 
                                                       FontSize="24" 
                                                       FontFamily="OutfitBold"
                                                       Margin="0,5,0,0"/>

                                                <Label Text="{Binding PendingTasks, StringFormat='Pending: {0}'}" 
                                                       TextColor="White" 
                                                       FontSize="14"
                                                       FontFamily="OutfitRegular"
                                                       Opacity="0.9"/>
                                                
                                                <Grid ColumnDefinitions="*, Auto" ColumnSpacing="10" Margin="0,10,0,0">
                                                    <ProgressBar Grid.Column="0"
                                                                 Progress="{Binding Percentage}" 
                                                                 ProgressColor="#ffaa20"
                                                                 HeightRequest="8"
                                                                 VerticalOptions="Center" />

                                                    <Label Grid.Column="1"
                                                           Text="{Binding Percentage, StringFormat='{0:P0}'}"
                                                           TextColor="White"
                                                           FontSize="12"
                                                           FontFamily="OutfitSemibold"
                                                           VerticalOptions="Center" />
                                                </Grid>


                                            </VerticalStackLayout>

                                            <ImageButton Source="edit.png" 
                                                        HorizontalOptions="End" 
                         VerticalOptions="Start"
                         WidthRequest="25"
                         HeightRequest="25"
                         BackgroundColor="Transparent"
                         Aspect="AspectFit"
                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=EditCategoryCommand}"
                         CommandParameter="{Binding .}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        
                        
                        

                        <Border Grid.Row="3"
                                WidthRequest="360"
                                MinimumHeightRequest="300"
                                BackgroundColor="White"
                                Stroke="Transparent"
                                Margin="0,20,0, 50">

                            <Border.StrokeShape>
                                <RoundRectangle CornerRadius="15"/>
                            </Border.StrokeShape>

                            <Border.Shadow>
                                <Shadow Brush="#212A40"
                                Offset="0,1"
                                Radius="4"
                                Opacity="0.5"/>
                            </Border.Shadow>

                            <Grid RowDefinitions="Auto, Auto"
                                  ColumnDefinitions="10*, 3*">

                                <HorizontalStackLayout Margin="0,25,0,0">

                                    <Label Text="Pending Tasks"
                                       Margin="25,0,0,0"
                                       FontSize="18"
                                       FontFamily="OutfitSemibold"
                                       TextColor="#7b81ff"
                                        />

                                    <Label Text="{Binding Tasks.Count}"
                                       Margin="8,2,0,0"
                                       FontSize="15"
                                       FontFamily="OutfitLight"
                                       TextColor="#7b81ff"
                                        />

                                </HorizontalStackLayout>

                                <Image Source="filter.png"
                                       Grid.Column="1"
                                       WidthRequest="28"
                                       Margin="0,25,0,0"
                                       x:Name="filter"
                                        />
                                
                                


                                <CollectionView ItemsSource="{Binding FilteredTasks}"
                                                Grid.Row="1"
                                                Grid.ColumnSpan="2"
                                                Margin="0,15,0, 30">

                                    <CollectionView.ItemsLayout>
                                        <LinearItemsLayout Orientation="Vertical" ItemSpacing="5" />
                                    </CollectionView.ItemsLayout>
                                    
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate>
                                            <Border StrokeThickness="0" 
                                                    BackgroundColor="White" 
                                                    Margin="0,0,0,12" 
                                                    HeightRequest="60"
                                                    WidthRequest="310">
                                                <Border.StrokeShape>
                                                    <RoundRectangle CornerRadius="20"/>
                                                </Border.StrokeShape>
                                                <Border.Shadow>
                                                    <Shadow Brush="Black" Opacity="0.3" Offset="0,2" Radius="4"/>
                                                </Border.Shadow>

                                                <Grid ColumnDefinitions="50, *">
                                                    <Border Grid.Column="0"
                                                            BackgroundColor="{Binding TaskColor}"
                                                            StrokeThickness="0"
                                                            WidthRequest="50">
                                                        <Border.StrokeShape>
                                                            <RoundRectangle CornerRadius="20,0,20,0"/>
                                                        </Border.StrokeShape>

                                                        <CheckBox Color="White" Margin="11,0,0,0" Scale="1.3" IsChecked="{Binding Completed}">
                                                            <VisualStateManager.VisualStateGroups>
                                                                <VisualStateGroupList>
                                                                    <VisualStateGroup x:Name="CommonStates">
                                                                        <VisualState x:Name="IsChecked">
                                                                            <VisualState.Setters>
                                                                                <Setter Property="Color" Value="transparent" />
                                                                            </VisualState.Setters>
                                                                        </VisualState>
                                                                        <VisualState x:Name="Normal">
                                                                            <VisualState.Setters>
                                                                                <Setter Property="Color" Value="white" />
                                                                            </VisualState.Setters>
                                                                        </VisualState>
                                                                    </VisualStateGroup>
                                                                </VisualStateGroupList>
                                                            </VisualStateManager.VisualStateGroups>
                                                        </CheckBox>
                                                    </Border>

                                                    <Border Grid.Column="1" Stroke="White">
                                                        <Border.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=EditTaskCommand}"
                                                                                  CommandParameter="{Binding .}" />
                                                        </Border.GestureRecognizers>

                                                        <Grid ColumnDefinitions="*, Auto" 
                                                              Padding="15,0,15,0" 
                                                              VerticalOptions="Center">

                                                            <VerticalStackLayout Grid.Column="0" VerticalOptions="Center">
                                                                <Label Text="{Binding TaskName}"
                                                                   TextColor="Black"
                                                                   FontFamily="OutfitSemibold"
                                                                   FontSize="16"
                                                                   LineBreakMode="TailTruncation"
                                                                   MaxLines="1" />

                                                                <Label Text="Pending" 
                                                                   TextColor="Gray" 
                                                                   FontSize="14"
                                                                   FontFamily="OutfitRegular">
                                                                    <Label.Triggers>
                                                                        <DataTrigger TargetType="Label"
                                                                                 Binding="{Binding Completed}"
                                                                                 Value="True">
                                                                            <Setter Property="Text" Value="Done" />
                                                                            <Setter Property="TextColor" Value="#ffaa20" />
                                                                        </DataTrigger>
                                                                    </Label.Triggers>
                                                                </Label>
                                                            </VerticalStackLayout>

                                                        </Grid>

                                                    </Border>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>



                            </Grid>

                        </Border>


                    </Grid>
                </Border>
            </VerticalStackLayout>

        </ScrollView>

        <ImageButton Source="plus.png"
                     VerticalOptions="End"
                     x:Name="AddTask"
                     Clicked="AddTask_Clicked"
                     HorizontalOptions="End"
                     WidthRequest="85"
                     Margin="25"
                     BackgroundColor="Transparent"/>
    </Grid>

</ContentPage>